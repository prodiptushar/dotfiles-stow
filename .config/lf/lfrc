# Basic Settings
set previewer ctpv
set preview true
set hidden true
set drawbox true
set icons true
set ignorecase true

set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

# Custom Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) setsid -f nuke "$f" ;;
    esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

